  
<div class="row">
    <div class="col s12 m8">
        <h3>{{game.name}}
            <small>{{{editIcon game.user user game._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate game.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{game.description}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">User - {{game.user.displayName}}</span>
                <img height="150" width="100" src="{{game.coverImagePath}}" class="responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="{{game.link}}" target="_blank" id="game-link">PLAY GAME</a>
            </div>
            <div class="card-action">
                <a href="/games/user/{{game.user._id}}">More From This User</a>
            </div>
        </div>
    </div>
</div>