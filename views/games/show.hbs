  
<div class="row">
    <div class="col s12 m8">
        <h3>{{game.name}}</h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{game.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{game.user.displayName}}</span>
                <img src="{{game.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/games/user/{{game.user._id}}">More From {{game.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>